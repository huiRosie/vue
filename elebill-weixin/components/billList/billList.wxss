.billList{
  width: 100%;
  height: 100%;
  overflow-y: scroll;
}

.billItem{
  width: 100%;
  height: 110rpx;
  overflow: hidden;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.billItemType{
  width: 20%;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  float: left;
}

.billItemType_s{
  color: #f71327;
}

.billItemType_y{
  color: #f87b29;
}

.billItemCenter{
  float: left;
  width: 80%;
  height: 110rpx;
  overflow: hidden;
}

.billUserName{
  font-size: 28rpx;
  font-weight: 600;
  height: 40rpx;
  line-height: 40rpx;
}

.billMoneyBox{
  overflow: hidden;
  height: 40rpx;
  line-height: 40rpx;
}

.billMoney{
  font-size: 24rpx;
  float: left
}

.billExpire,.billLeftDays{
  font-size: 24rpx;
  color: #ccc;
  float: right;
  padding-right: 30rpx;
}

.billFixed{
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #ccc;
}

.billFixedMoney{
  color: #f71327;
}

