/* pages/billDetail/billDetail.wxss */
.container{
  width: 100%;
  height: 100%;
}

.main{
  width: 80%;
  height: auto;
  padding: 20rpx;
  margin: 50rpx auto;
  border: 1px solid #eee;
  border-radius: 8rpx;
  box-shadow: 10px 10px 10px 0px rgba(232,232,232,0.5);
}

.billItem{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  overflow: hidden;
  border-bottom: 1px solid #eee;
}

.billItem_label{
  float: left;
  width: auto;
  color: #ccc;
  font-size: 28rpx;
}

.billItem_text{
  float: right;
  width: auto;
  font-size: 30rpx;
}

.billFixed_text{
  color: #f71327;
}


/*底部  */
.bottom{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #eee;
  position: fixed;
  bottom: 0;
}

.aboutUs{
  float: left;
  width: 20%;
  font-size: 28rpx;
  text-align: center;
}

.contactUs{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background: #f71327;
}